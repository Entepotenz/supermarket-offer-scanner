{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Entepotenz/renovate_custom_presets//default.json",
    "github>Entepotenz/renovate_custom_presets//group-linters.json",
    "github>Entepotenz/renovate_custom_presets//group-github-actions.json",
    "github>Entepotenz/renovate_custom_presets//group-python-testing-and-linting-packages.json"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": [
        "/(^|/|\\.)([Dd]ocker|[Cc]ontainer)file.*$/",
        "/(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$/"
      ],
      "matchStrings": [
        "#\\s?renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?ARG\\s+S6_OVERLAY_VERSION=\\s*(?<currentValue>.*)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/run-.+.sh/"],
      "matchStrings": [
        "DOCKER_IMAGE=\"(?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["pypi"],
      "matchManagers": ["pip_requirements", "poetry"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Python dependencies",
      "enabled": true
    }
  ]
}
